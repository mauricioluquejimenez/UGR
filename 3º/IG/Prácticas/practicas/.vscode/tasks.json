{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C++",
            "type": "shell",
            "command": "/usr/bin/g++", // Cambia esto si usas Clang o GCC en otra ruta
            "args": [
                "-std=c++17", // Cambia a c++14, c++17, etc., si lo necesitas
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilaci√≥n de archivos C++"
        }
    ]
}
